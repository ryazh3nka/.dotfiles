<?xml version="1.0"?>

<labwc_config>
        <desktops number="9">
                <popupTime>0</popupTime>
        </desktops>

        <windowSwitcher>
                <osd style="thumbnail" />
        </windowSwitcher>

        <theme>
                <name>Gruvbox</name>
                <font name="Ubuntu Nerd Font" size="10" />
        </theme>
                
        <keyboard>
                <keybind key="W-q"><action name="Close" /></keybind>
                <keybind key="W-w"><action name="ToggleMaximize" /></keybind>
                <keybind key="W-e"><action name="Iconify" /></keybind>
                
                <keybind key="W-Tab"><action name="NextWindow" /></keybind>
                <keybind key="W-S-Tab"><action name="PreviousWindow" /></keybind>
                <keybind key="W-n"><action name="NextWindow" /></keybind>
                <keybind key="W-p"><action name="PreviousWindow" /></keybind>
                
                <keybind key="W-h"><action name="ToggleSnapToEdge" direction="left" combine="yes" /></keybind>
                <keybind key="W-l"><action name="ToggleSnapToEdge" direction="right" combine="yes" /></keybind>
                <keybind key="W-j"><action name="ToggleSnapToEdge" direction="down" combine="yes" /></keybind>
                <keybind key="W-k"><action name="ToggleSnapToEdge" direction="up" combine="yes" /></keybind>

                <keybind key="W-Return"><action name="Execute" command="foot" /></keybind>
                <keybind key="W-["><action name="Execute" command="emacsclient -c -a ''" /></keybind>
                <keybind key="W-c"><action name="Execute" command="hyprpicker -a ''" /></keybind>
                <keybind key="W-d"><action name="Execute" command="bemenu-run -p ''" /></keybind>
                <keybind key="Print"><action name="Execute" command="spawn-grim-slurp" /></keybind>
                <keybind key="S-Print"><action name="Execute" command="spawn-grim" /></keybind>

                <keybind key="W-S-c"><action name="Reconfigure" /></keybind>
                <keybind key="W-S-m"><action name="Exit" /></keybind>

                <keybind key="W-1"><action name="GoToDesktop" to="1" /></keybind>
                <keybind key="W-2"><action name="GoToDesktop" to="2" /></keybind>
                <keybind key="W-3"><action name="GoToDesktop" to="3" /></keybind>
                <keybind key="W-4"><action name="GoToDesktop" to="4" /></keybind>
                <keybind key="W-5"><action name="GoToDesktop" to="5" /></keybind>
                <keybind key="W-6"><action name="GoToDesktop" to="6" /></keybind>
                <keybind key="W-7"><action name="GoToDesktop" to="7" /></keybind>
                <keybind key="W-8"><action name="GoToDesktop" to="8" /></keybind>
                <keybind key="W-9"><action name="GoToDesktop" to="9" /></keybind>

                <keybind key="W-S-1"><action name="SendToDesktop" to="1" /></keybind>
                <keybind key="W-S-2"><action name="SendToDesktop" to="2" /></keybind>
                <keybind key="W-S-3"><action name="SendToDesktop" to="3" /></keybind>
                <keybind key="W-S-4"><action name="SendToDesktop" to="4" /></keybind>
                <keybind key="W-S-5"><action name="SendToDesktop" to="5" /></keybind>
                <keybind key="W-S-6"><action name="SendToDesktop" to="6" /></keybind>
                <keybind key="W-S-7"><action name="SendToDesktop" to="7" /></keybind>
                <keybind key="W-S-8"><action name="SendToDesktop" to="8" /></keybind>
                <keybind key="W-S-9"><action name="SendToDesktop" to="9" /></keybind>

                <keybind key="XF86AudioMute"><action name="Execute" command="pactl set-sink-mute \@DEFAULT_SINK@ toggle" /></keybind>
                <keybind key="XF86AudioLowerVolume"><action name="Execute" command="pactl set-sink-volume \@DEFAULT_SINK@ -5%" /></keybind>
                <keybind key="XF86AudioRaiseVolume"><action name="Execute" command="pactl set-sink-volume \@DEFAULT_SINK@ +5%" /></keybind>
                <keybind key="XF86AudioMicMute"><action name="Execute" command="pactl set-source-mute \@DEFAULT_SOURCE@ toggle" /></keybind>

                <keybind key="XF86MonBrightnessDown"><action name="Execute" command="brightnessctl -n -e set 10%-" /></keybind>
                <keybind key="XF86MonBrightnessUp"><action name="Execute" command="brightnessctl -n -e set 10%+" /></keybind>

                <repeatDelay>400</repeatDelay>
                <repeatRate>40</repeatRate>
        </keyboard>

        <resistance>
                <windowEdgeStrength>0</windowEdgeStrength>
                <screenEdgeStrength>20</screenEdgeStrength>
        </resistance>

        <focus>
                <followMouse>yes</followMouse>
                <followMouseRequiresMovement>no</followMouseRequiresMovement>
        </focus>

        <libinput>
                <device category="default">
                        <naturalScroll>yes</naturalScroll>
                </device>
        </libinput>
</labwc_config>
